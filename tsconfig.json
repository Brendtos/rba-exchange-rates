{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": ".",
    "rootDirs": ["src", "example"],  // Add this line
    "outDir": "./dist",
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
